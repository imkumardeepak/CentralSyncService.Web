@model Web.Core.Entities.PlantConfiguration
@{
    ViewData["Title"] = "Delete Plant";
}

<div class="bg-neutral-100 min-h-full py-6">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Breadcrumb -->
        <nav class="mb-6" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-2 text-sm">
                <li>
                    <a href="@Url.Action("Index")" class="text-neutral-500 hover:text-brand-600 transition-colors">
                        Plant Configuration
                    </a>
                </li>
                <li class="text-neutral-300">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                    </svg>
                </li>
                <li class="text-neutral-900 font-medium">Delete Plant</li>
            </ol>
        </nav>

        <!-- Deletion Card -->
        <div class="bg-white rounded-xl shadow-card overflow-hidden animate-fade-in">
            <!-- Danger Header -->
            <div class="bg-gradient-to-r from-red-50 to-red-100/50 px-6 py-5 border-b border-red-100">
                <div class="flex items-start gap-4">
                    <div class="flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 ring-4 ring-red-50">
                        <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-lg font-semibold text-red-900">Confirm Deletion</h2>
                        <p class="mt-1 text-sm text-red-700">
                            You are about to permanently delete this plant configuration. This action cannot be undone.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Plant Details -->
            <div class="p-6">
                <h3 class="text-sm font-medium text-neutral-500 uppercase tracking-wide mb-4">Plant Information</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                    <div class="p-3 bg-neutral-50 rounded-lg">
                        <dt class="text-xs font-medium text-neutral-500 uppercase">Plant Name</dt>
                        <dd class="mt-1 text-sm font-medium text-neutral-900">@Model.PlantName</dd>
                    </div>
                    <div class="p-3 bg-neutral-50 rounded-lg">
                        <dt class="text-xs font-medium text-neutral-500 uppercase">Plant Code</dt>
                        <dd class="mt-1 text-sm font-medium text-neutral-900">@Model.PlantCode</dd>
                    </div>
                    <div class="p-3 bg-neutral-50 rounded-lg">
                        <dt class="text-xs font-medium text-neutral-500 uppercase">Plant Type</dt>
                        <dd class="mt-1">
                            @await Html.PartialAsync("_Badge", new { 
                                Variant = Model.PlantType == "FROM" ? "warning" : "info", 
                                Text = Model.PlantType
                            })
                        </dd>
                    </div>
                    <div class="p-3 bg-neutral-50 rounded-lg">
                        <dt class="text-xs font-medium text-neutral-500 uppercase">Server IP</dt>
                        <dd class="mt-1 text-sm font-medium text-neutral-900">@Model.ServerIP</dd>
                    </div>
                    <div class="p-3 bg-neutral-50 rounded-lg">
                        <dt class="text-xs font-medium text-neutral-500 uppercase">Database Name</dt>
                        <dd class="mt-1 text-sm font-medium text-neutral-900">@Model.DatabaseName</dd>
                    </div>
                    <div class="p-3 bg-neutral-50 rounded-lg">
                        <dt class="text-xs font-medium text-neutral-500 uppercase">Last Sync Status</dt>
                        <dd class="mt-1 text-sm font-medium text-neutral-900">@(Model.LastSyncStatus ?? "Never synced")</dd>
                    </div>
                </div>

                <!-- Warning Box -->
                <div class="mt-6 p-4 bg-amber-50 border border-amber-200 rounded-lg">
                    <div class="flex gap-3">
                        <svg class="h-5 w-5 text-amber-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                        </svg>
                        <div>
                            <h4 class="text-sm font-semibold text-amber-900">What happens when you delete?</h4>
                            <ul class="mt-2 text-sm text-amber-800 space-y-1">
                                <li>• All data synchronization for this plant will stop immediately</li>
                                <li>• Historical tracking data in the central database will <strong>NOT</strong> be deleted</li>
                                <li>• You will need to recreate the configuration to resume syncing</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Footer -->
            <div class="bg-neutral-50 px-6 py-4 border-t border-neutral-200 flex flex-col-reverse sm:flex-row sm:justify-end gap-3">
                <a href="@Url.Action("Index")" 
                   class="inline-flex justify-center items-center px-4 py-2.5 
                          bg-white text-neutral-700 text-sm font-medium rounded-lg 
                          border border-neutral-300 shadow-sm
                          hover:bg-neutral-50 hover:border-neutral-400
                          focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2
                          transition-all duration-200">
                    Cancel
                </a>
                
<form asp-action="Delete" method="post" id="deleteForm" class="inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit"
                            class="w-full sm:w-auto inline-flex justify-center items-center px-4 py-2.5 
                                   bg-red-600 text-white text-sm font-medium rounded-lg shadow-sm
                                   hover:bg-red-700
                                   focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2
                                   transition-all duration-200"
                            onclick="return confirm('Are you sure you want to delete @Html.Raw(Model.PlantName.Replace("'", "\\'"))? This action cannot be undone.');">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                        Delete Plant
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

