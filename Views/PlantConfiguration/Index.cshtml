@model IEnumerable<Web.Core.Entities.PlantConfiguration>

@{
    ViewData["Title"] = "Plant Configurations";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string currentSearch = ViewBag.SearchTerm;
    string currentType = ViewBag.PlantType;
    string currentStatus = ViewBag.Status;
    int totalCount = Model?.Count() ?? 0;
}

<div class="bg-neutral-100 min-h-full">
    <!-- Page Header -->
    <div class="border-b border-neutral-200 bg-white/80 backdrop-blur-sm sticky top-16 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div class="min-w-0 flex-1">
                    <div class="flex items-center gap-3">
                        <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-brand-100 flex items-center justify-center">
                            <svg class="w-5 h-5 text-brand-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                            </svg>
                        </div>
                        <div>
                            <h1 class="text-2xl font-bold text-neutral-900 tracking-tight">Plant Configurations</h1>
                            <p class="mt-0.5 text-sm text-neutral-500">Manage FROM/TO plant database connections</p>
                        </div>
                    </div>
                </div>
                
                <div class="flex items-center gap-3 flex-shrink-0">
                    <a href="@Url.Action("Create")" 
                       class="inline-flex items-center px-4 py-2.5 bg-brand-600 text-white text-sm font-medium rounded-lg shadow-sm
                              hover:bg-brand-700 hover:-translate-y-0.5 hover:shadow-md
                              focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2
                              transition-all duration-200">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                        </svg>
                        Add New Plant
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 space-y-6">
        <!-- Filters & Search Card -->
        <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5 animate-fade-in">
            <form method="get" class="grid grid-cols-1 md:grid-cols-5 gap-4">
                <!-- Search -->
                <div class="md:col-span-2">
                    <label for="searchTerm" class="block text-sm font-medium text-neutral-700 mb-1.5">Search</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="h-4 w-4 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                            </svg>
                        </div>
                        <input type="text" name="searchTerm" id="searchTerm" value="@currentSearch"
                               class="block w-full pl-10 pr-3 py-2.5 text-sm border border-neutral-300 rounded-lg 
                                      focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-colors"
                               placeholder="Search by code or name...">
                    </div>
                </div>

                <!-- Plant Type -->
                <div>
                    <label for="plantType" class="block text-sm font-medium text-neutral-700 mb-1.5">Type</label>
                    <select id="plantType" name="plantType" 
                            class="block w-full py-2.5 px-3 text-sm border border-neutral-300 rounded-lg 
                                   focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-colors">
                        <option value="">All Types</option>
                        <option value="FROM" @(currentType == "FROM" ? "selected" : "")>FROM (Source)</option>
                        <option value="TO" @(currentType == "TO" ? "selected" : "")>TO (Destination)</option>
                    </select>
                </div>

                <!-- Status -->
                <div>
                    <label for="status" class="block text-sm font-medium text-neutral-700 mb-1.5">Status</label>
                    <select id="status" name="status" 
                            class="block w-full py-2.5 px-3 text-sm border border-neutral-300 rounded-lg 
                                   focus:ring-2 focus:ring-brand-500 focus:border-brand-500 transition-colors">
                        <option value="">All Statuses</option>
                        <option value="active" @(currentStatus == "active" ? "selected" : "")>Active</option>
                        <option value="inactive" @(currentStatus == "inactive" ? "selected" : "")>Inactive</option>
                    </select>
                </div>

                <!-- Actions -->
                <div class="flex items-end gap-2">
                    <button type="submit" 
                            class="flex-1 inline-flex justify-center items-center px-4 py-2.5 
                                   bg-neutral-100 text-neutral-700 text-sm font-medium rounded-lg border border-neutral-300
                                   hover:bg-neutral-200 hover:border-neutral-400
                                   focus:outline-none focus:ring-2 focus:ring-neutral-500 focus:ring-offset-2
                                   transition-all duration-200">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
                        </svg>
                        Filter
                    </button>
                    @if (!string.IsNullOrEmpty(currentSearch) || !string.IsNullOrEmpty(currentType) || !string.IsNullOrEmpty(currentStatus))
                    {
                        <a href="@Url.Action("Index")" 
                           class="inline-flex items-center justify-center px-3 py-2.5 text-sm text-neutral-500 hover:text-neutral-700 transition-colors"
                           title="Clear filters">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </a>
                    }
                </div>
            </form>
        </div>

        <!-- Data Table Card -->
        <div class="bg-white rounded-xl shadow-card border border-neutral-200 overflow-hidden animate-fade-in">
            <!-- Table Header -->
            <div class="px-6 py-4 border-b border-neutral-200 bg-neutral-50/50">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-2">
                        <h2 class="text-base font-semibold text-neutral-900">All Plants</h2>
                        @await Html.PartialAsync("_Badge", new { Variant = "neutral", Text = $"{totalCount} total" })
                    </div>
                </div>
            </div>
            
            @if (Model.Any())
            {
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-neutral-200">
                        <thead class="bg-neutral-50">
                            <tr>
                                <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Plant Info</th>
                                <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Connection</th>
                                <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Last Sync</th>
                                <th scope="col" class="px-6 py-3.5 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Status</th>
                                <th scope="col" class="relative px-6 py-3.5">
                                    <span class="sr-only">Actions</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-neutral-200">
                            @foreach (var item in Model)
                            {
                                var typeColor = item.PlantType == "FROM" ? "amber" : "purple";
                                var syncSuccess = item.LastSyncSuccess.HasValue;
                                
                                <tr class="hover:bg-brand-50/50 transition-colors duration-150 group">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-4">
                                            <div class="flex-shrink-0 h-11 w-11 flex items-center justify-center rounded-xl 
                                                        @(item.PlantType == "FROM" ? "bg-amber-100 text-amber-700" : "bg-purple-100 text-purple-700")">
                                                <span class="font-bold text-xs">@item.PlantType</span>
                                            </div>
                                            <div class="min-w-0">
                                                <div class="text-sm font-semibold text-neutral-900 truncate">@item.PlantName</div>
                                                <div class="text-sm text-neutral-500 font-mono">@item.PlantCode</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-2">
                                            <div class="flex-shrink-0 w-8 h-8 rounded-lg bg-neutral-100 flex items-center justify-center">
                                                <svg class="w-4 h-4 text-neutral-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
                                                </svg>
                                            </div>
                                            <div>
                                                <div class="text-sm font-medium text-neutral-900">@item.ServerIP</div>
                                                <div class="text-xs text-neutral-500">@item.DatabaseName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        @if (syncSuccess)
                                        {
                                            <div class="text-sm text-neutral-900">@item.LastSyncSuccess.Value.ToString("MMM dd, HH:mm")</div>
                                            @await Html.PartialAsync("_Badge", new { Variant = "success", Text = item.LastSyncStatus ?? "Success", Size = "xs" })
                                        }
                                        else
                                        {
                                            <span class="text-sm text-neutral-400">Never synced</span>
                                            @if (!string.IsNullOrEmpty(item.LastSyncStatus))
                                            {
                                                <div class="mt-1">
                                                    @await Html.PartialAsync("_Badge", new { Variant = "danger", Text = "Error", Size = "xs" })
                                                </div>
                                            }
                                        }
                                    </td>
                                    <td class="px-6 py-4">
                                        @await Html.PartialAsync("_Badge", new { 
                                            Variant = item.IsActive ? "success" : "danger", 
                                            Text = item.IsActive ? "Active" : "Inactive",
                                            ShowDot = true
                                        })
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <div class="flex items-center justify-end gap-1 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
                                            <a href="@Url.Action("Edit", new { id = item.Id })" 
                                               class="inline-flex items-center justify-center w-8 h-8 text-neutral-500 hover:text-brand-600 hover:bg-brand-50 rounded-lg transition-colors"
                                               title="Edit">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                                </svg>
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = item.Id })" 
                                               class="inline-flex items-center justify-center w-8 h-8 text-neutral-500 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors"
                                               title="Delete">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                                </svg>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <div class="px-6 py-4 border-t border-neutral-200 bg-neutral-50/50">
                        <nav class="flex items-center justify-between" aria-label="Pagination">
                            <div class="hidden sm:block">
                                <p class="text-sm text-neutral-600">
                                    Page <span class="font-medium text-neutral-900">@currentPage</span> of 
                                    <span class="font-medium text-neutral-900">@totalPages</span>
                                </p>
                            </div>
                            <div class="flex items-center gap-2">
                                @if (currentPage > 1)
                                {
                                    <a href="@Url.Action("Index", new { page = currentPage - 1, searchTerm = currentSearch, plantType = currentType, status = currentStatus })" 
                                       class="inline-flex items-center px-3 py-2 text-sm font-medium text-neutral-700 bg-white border border-neutral-300 rounded-lg hover:bg-neutral-50 transition-colors">
                                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                                        </svg>
                                        Previous
                                    </a>
                                }
                                
                                @if (currentPage < totalPages)
                                {
                                    <a href="@Url.Action("Index", new { page = currentPage + 1, searchTerm = currentSearch, plantType = currentType, status = currentStatus })" 
                                       class="inline-flex items-center px-3 py-2 text-sm font-medium text-neutral-700 bg-white border border-neutral-300 rounded-lg hover:bg-neutral-50 transition-colors">
                                        Next
                                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                        </svg>
                                    </a>
                                }
                            </div>
                        </nav>
                    </div>
                }
            }
            else
            {
                @await Html.PartialAsync("_EmptyState", new {
                    Icon = "settings",
                    Title = "No plants configured",
                    Message = "Get started by adding your first FROM or TO plant configuration to enable box tracking synchronization.",
                    ActionText = "Add New Plant",
                    ActionUrl = Url.Action("Create")
                })
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show loading on pagination links
        document.querySelectorAll('nav a').forEach(function(link) {
            link.addEventListener('click', function() {
                if (window.LoadingManager) {
                    window.LoadingManager.show('Loading...', 'Fetching plant configurations');
                }
            });
        });
        
        // Show loading on search/filter
        document.querySelector('form').addEventListener('submit', function() {
            if (window.LoadingManager) {
                window.LoadingManager.show('Searching...', 'Applying filters');
            }
        });
        
        // Show loading on delete confirmation
        document.querySelectorAll('a[href*="Delete"]').forEach(function(link) {
            link.addEventListener('click', function() {
                if (window.LoadingManager) {
                    window.LoadingManager.show('Loading...', 'Opening delete confirmation');
                }
            });
        });
    </script>
}
