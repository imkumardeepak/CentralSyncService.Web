@model List<Web.Core.DTOs.NoReadAnalysisRecord>
@{
    ViewData["Title"] = "NO READ Analysis";
    var date = ViewBag.Date as DateTime? ?? DateTime.Today;
    var formattedDate = date.ToString("yyyy-MM-dd");
    var fromRecords = Model?.Where(r => r.Scanner == "FROM").ToList() ?? new List<Web.Core.DTOs.NoReadAnalysisRecord>();
    var toRecords = Model?.Where(r => r.Scanner == "TO").ToList() ?? new List<Web.Core.DTOs.NoReadAnalysisRecord>();
}

<div class="bg-neutral-100 min-h-full">
    <!-- Page Header -->
    <div class="border-b border-neutral-200 bg-white/80 backdrop-blur-sm sticky top-16 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div class="min-w-0 flex-1">
                    <a href="@Url.Action("Dashboard")" 
                       class="group inline-flex items-center text-sm text-neutral-500 hover:text-brand-600 mb-2 transition-colors duration-200">
                        <svg class="mr-1.5 h-4 w-4 transition-transform duration-200 group-hover:-translate-x-0.5" 
                             fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                        </svg>
                        Back to Dashboard
                    </a>
                    <h1 class="text-2xl font-bold text-neutral-900 tracking-tight">NO READ Analysis</h1>
                    <p class="mt-1 text-sm text-neutral-500">Scanner failure analysis and trends</p>
                </div>
                
                <div class="flex items-center gap-3 flex-shrink-0">
                    <button type="button" onclick="exportToCSV()" 
                            class="inline-flex items-center px-3 py-2 text-sm font-medium text-neutral-600 bg-white border border-neutral-300 rounded-lg hover:bg-neutral-50 hover:border-neutral-400 transition-all duration-200">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                        </svg>
                        Export CSV
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 space-y-6">
        <!-- Date Filter -->
        <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
            <form method="get" class="flex flex-col sm:flex-row gap-4 items-end">
                <div class="flex-1 w-full sm:max-w-xs">
                    <label class="block text-sm font-medium text-neutral-700 mb-1">Select Date</label>
                    <input type="date" name="date" value="@formattedDate" 
                           class="w-full px-3 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 text-sm"/>
                </div>
                <div class="flex gap-2">
                    <button type="submit" 
                            class="px-4 py-2 bg-brand-600 text-white text-sm font-medium rounded-lg hover:bg-brand-700 transition-colors">
                        Apply
                    </button>
                    <a href="@Url.Action("NoReadAnalysis")" 
                       class="px-4 py-2 bg-neutral-100 text-neutral-700 text-sm font-medium rounded-lg hover:bg-neutral-200 transition-colors">
                        Today
                    </a>
                </div>
            </form>
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Summary Cards -->
            <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
                <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
                    <p class="text-xs font-medium text-neutral-500 uppercase tracking-wide">Total NO READs</p>
                    <p class="mt-2 text-2xl font-bold text-red-600">@Model.Sum(m => m.NoReadCount).ToString("N0")</p>
                </div>
                <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
                    <p class="text-xs font-medium text-neutral-500 uppercase tracking-wide">FROM NO READs</p>
                    <p class="mt-2 text-2xl font-bold text-orange-600">@fromRecords.Sum(m => m.NoReadCount).ToString("N0")</p>
                </div>
                <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
                    <p class="text-xs font-medium text-neutral-500 uppercase tracking-wide">TO NO READs</p>
                    <p class="mt-2 text-2xl font-bold text-purple-600">@toRecords.Sum(m => m.NoReadCount).ToString("N0")</p>
                </div>
                <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
                    <p class="text-xs font-medium text-neutral-500 uppercase tracking-wide">Worst Hour</p>
                    <p class="mt-2 text-xl font-bold text-red-600">
                        @(Model.OrderByDescending(m => m.NoReadCount).FirstOrDefault()?.Hour.ToString() ?? "—"):00
                    </p>
                    <p class="text-xs text-neutral-500">
                        @Model.OrderByDescending(m => m.NoReadCount).FirstOrDefault()?.NoReadCount.ToString("N0") events
                    </p>
                </div>
            </div>

            <!-- FROM Scanner Section -->
            @if (fromRecords.Any())
            {
                <div class="bg-white rounded-xl shadow-card border border-neutral-200 overflow-hidden">
                    <div class="px-6 py-4 border-b border-neutral-200 bg-neutral-50/50 flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 rounded-lg bg-amber-100 flex items-center justify-center">
                                <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"/>
                                </svg>
                            </div>
                            <div>
                                <h2 class="text-lg font-semibold text-neutral-900">FROM Scanner NO READs</h2>
                                <p class="text-sm text-neutral-500">Scanning failures at FROM plants</p>
                            </div>
                        </div>
                        <span class="text-2xl font-bold text-amber-600">@fromRecords.Sum(m => m.NoReadCount).ToString("N0")</span>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-neutral-200">
                            <thead class="bg-neutral-50">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Plant</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Line</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Hour</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">NO READ Count</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">NO READ %</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Status</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-neutral-200">
                                @foreach (var record in fromRecords)
                                {
                                    <tr class="hover:bg-brand-50/50 transition-colors duration-150">
                                        <td class="px-4 py-3 text-sm text-neutral-700">@(record.Plant ?? "—")</td>
                                        <td class="px-4 py-3 text-sm text-neutral-700">@(record.LineCode ?? "—")</td>
                                        <td class="px-4 py-3 text-sm text-neutral-700">@record.Hour:00 - @(record.Hour + 1):00</td>
                                        <td class="px-4 py-3 text-sm font-medium text-neutral-900">@record.NoReadCount</td>
                                        <td class="px-4 py-3 text-sm">
                                            @await Html.PartialAsync("_Badge", new { 
                                                Variant = record.NoReadPercent < 2 ? "success" : record.NoReadPercent < 5 ? "warning" : "danger", 
                                                Text = $"{record.NoReadPercent:F2}%",
                                                Size = "sm"
                                            })
                                        </td>
                                        <td class="px-4 py-3 text-sm">
                                            @if (record.NoReadPercent >= 5)
                                            {
                                                <span class="inline-flex items-center text-xs text-red-600">
                                                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                                    </svg>
                                                    High Failure
                                                </span>
                                            }
                                            else if (record.NoReadPercent >= 2)
                                            {
                                                <span class="inline-flex items-center text-xs text-amber-600">
                                                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                                    </svg>
                                                    Warning
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="inline-flex items-center text-xs text-emerald-600">
                                                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                                    </svg>
                                                    Normal
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            <!-- TO Scanner Section -->
            @if (toRecords.Any())
            {
                <div class="bg-white rounded-xl shadow-card border border-neutral-200 overflow-hidden">
                    <div class="px-6 py-4 border-b border-neutral-200 bg-neutral-50/50 flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 rounded-lg bg-purple-100 flex items-center justify-center">
                                <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                                </svg>
                            </div>
                            <div>
                                <h2 class="text-lg font-semibold text-neutral-900">TO Scanner NO READs</h2>
                                <p class="text-sm text-neutral-500">Scanning failures at TO plants</p>
                            </div>
                        </div>
                        <span class="text-2xl font-bold text-purple-600">@toRecords.Sum(m => m.NoReadCount).ToString("N0")</span>
                    </div>
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-neutral-200">
                            <thead class="bg-neutral-50">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Plant</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Line</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Hour</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">NO READ Count</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">NO READ %</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Status</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-neutral-200">
                                @foreach (var record in toRecords)
                                {
                                    <tr class="hover:bg-brand-50/50 transition-colors duration-150">
                                        <td class="px-4 py-3 text-sm text-neutral-700">@(record.Plant ?? "—")</td>
                                        <td class="px-4 py-3 text-sm text-neutral-700">@(record.LineCode ?? "—")</td>
                                        <td class="px-4 py-3 text-sm text-neutral-700">@record.Hour:00 - @(record.Hour + 1):00</td>
                                        <td class="px-4 py-3 text-sm font-medium text-neutral-900">@record.NoReadCount</td>
                                        <td class="px-4 py-3 text-sm">
                                            @await Html.PartialAsync("_Badge", new { 
                                                Variant = record.NoReadPercent < 2 ? "success" : record.NoReadPercent < 5 ? "warning" : "danger", 
                                                Text = $"{record.NoReadPercent:F2}%",
                                                Size = "sm"
                                            })
                                        </td>
                                        <td class="px-4 py-3 text-sm">
                                            @if (record.NoReadPercent >= 5)
                                            {
                                                <span class="inline-flex items-center text-xs text-red-600">
                                                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                                    </svg>
                                                    High Failure
                                                </span>
                                            }
                                            else if (record.NoReadPercent >= 2)
                                            {
                                                <span class="inline-flex items-center text-xs text-amber-600">
                                                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                                    </svg>
                                                    Warning
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="inline-flex items-center text-xs text-emerald-600">
                                                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                                    </svg>
                                                    Normal
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            <!-- Recommendations -->
            <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-6">
                <h3 class="text-lg font-semibold text-neutral-900 mb-4">Recommendations</h3>
                <div class="space-y-3">
                    @if (Model.Any(m => m.NoReadPercent >= 5))
                    {
                        <div class="flex items-start gap-3 p-3 bg-red-50 rounded-lg">
                            <svg class="w-5 h-5 text-red-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <div>
                                <p class="text-sm font-medium text-red-800">High NO READ Rate Detected</p>
                                <p class="text-sm text-red-700 mt-1">Some hours show NO READ rates above 5%. Check scanner alignment, lighting conditions, and barcode print quality.</p>
                            </div>
                        </div>
                    }
                    @if (Model.Any(m => m.NoReadPercent >= 2 && m.NoReadPercent < 5))
                    {
                        <div class="flex items-start gap-3 p-3 bg-amber-50 rounded-lg">
                            <svg class="w-5 h-5 text-amber-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <div>
                                <p class="text-sm font-medium text-amber-800">Elevated NO READ Rate</p>
                                <p class="text-sm text-amber-700 mt-1">NO READ rates between 2-5% indicate potential scanner maintenance needs. Schedule preventive maintenance.</p>
                            </div>
                        </div>
                    }
                    @if (Model.All(m => m.NoReadPercent < 2))
                    {
                        <div class="flex items-start gap-3 p-3 bg-emerald-50 rounded-lg">
                            <svg class="w-5 h-5 text-emerald-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            <div>
                                <p class="text-sm font-medium text-emerald-800">Scanner Performance Good</p>
                                <p class="text-sm text-emerald-700 mt-1">NO READ rates are below 2%. Scanner performance is within acceptable range.</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            @await Html.PartialAsync("_EmptyState", new {
                Icon = "check",
                Title = "No NO READ events!",
                Message = $"Excellent! No NO READ events recorded for {date.ToString("MMMM dd, yyyy")}. All scanners are working properly."
            })
        }
    </div>
</div>

@section Scripts {
    <script>
        // Show loading on form submission
        document.querySelector('form').addEventListener('submit', function() {
            if (window.LoadingManager) {
                window.LoadingManager.show('Loading Report...', 'Fetching NO READ analysis data');
            }
        });
        
        function exportToCSV() {
            const tables = document.querySelectorAll('table');
            if (tables.length === 0) return;
            
            if (window.LoadingManager) {
                window.LoadingManager.show('Exporting...', 'Preparing CSV file for download');
            }
            
            let csv = ['Type,Plant,Line,Hour,NO Read Count,NO Read %'];
            
            tables.forEach(table => {
                const rows = table.querySelectorAll('tbody tr');
                const type = table.closest('.bg-white').textContent.includes('FROM') ? 'FROM' : 'TO';
                
                rows.forEach(row => {
                    const cols = row.querySelectorAll('td');
                    if (cols.length >= 5) {
                        const rowData = [
                            type,
                            cols[0].innerText,
                            cols[1].innerText,
                            cols[2].innerText,
                            cols[3].innerText,
                            cols[4].innerText
                        ];
                        csv.push(rowData.join(','));
                    }
                });
            });
            
            const csvContent = 'data:text/csv;charset=utf-8,' + csv.join('\n');
            const encodedUri = encodeURI(csvContent);
            const link = document.createElement('a');
            link.setAttribute('href', encodedUri);
            link.setAttribute('download', 'no_read_analysis.csv');
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            setTimeout(function() {
                if (window.LoadingManager) {
                    window.LoadingManager.hide();
                }
            }, 1000);
        }
    </script>
}
