@model List<Web.Core.DTOs.ProblemBoxRecord>
@{
    ViewData["Title"] = "Problem Boxes";
}

<div class="bg-neutral-100 min-h-full">
    <!-- Page Header -->
    <div class="border-b border-neutral-200 bg-white/80 backdrop-blur-sm sticky top-16 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div class="min-w-0 flex-1">
                    <a href="@Url.Action("Dashboard")" 
                       class="group inline-flex items-center text-sm text-neutral-500 hover:text-brand-600 mb-2 transition-colors duration-200">
                        <svg class="mr-1.5 h-4 w-4 transition-transform duration-200 group-hover:-translate-x-0.5" 
                             fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                        </svg>
                        Back to Dashboard
                    </a>
                    <div class="flex items-center gap-3">
                        <h1 class="text-2xl font-bold text-neutral-900 tracking-tight">Problem Boxes</h1>
                        @if (Model != null && Model.Any())
                        {
                            @await Html.PartialAsync("_Badge", new { 
                                Variant = "danger", 
                                Text = $"{Model.Count} issues",
                                ShowDot = true
                            })
                        }
                    </div>
                    <p class="mt-1 text-sm text-neutral-500">Non-matched boxes requiring investigation (last 7 days)</p>
                </div>
                
                <div class="flex items-center gap-3 flex-shrink-0">
                    <button type="button" onclick="exportToCSV()" 
                            class="inline-flex items-center px-3 py-2 text-sm font-medium text-neutral-600 bg-white border border-neutral-300 rounded-lg hover:bg-neutral-50 hover:border-neutral-400 transition-all duration-200">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                        </svg>
                        Export CSV
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 space-y-6">
        @if (Model != null && Model.Any())
        {
            <!-- Summary Cards -->
            <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
                <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
                    <p class="text-xs font-medium text-neutral-500 uppercase tracking-wide">Total Issues</p>
                    <p class="mt-2 text-2xl font-bold text-red-600">@Model.Count</p>
                </div>
                <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
                    <p class="text-xs font-medium text-neutral-500 uppercase tracking-wide">Missing @@TO</p>
                    <p class="mt-2 text-2xl font-bold text-orange-600">@Model.Count(m => m.MatchStatus == "MISSING_AT_TO")</p>
                </div>
                <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
                    <p class="text-xs font-medium text-neutral-500 uppercase tracking-wide">Missing @@FROM</p>
                    <p class="mt-2 text-2xl font-bold text-purple-600">@Model.Count(m => m.MatchStatus == "MISSING_AT_FROM")</p>
                </div>
                <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
                    <p class="text-xs font-medium text-neutral-500 uppercase tracking-wide">Both Failed</p>
                    <p class="mt-2 text-2xl font-bold text-red-800">@Model.Count(m => m.MatchStatus == "BOTH_FAILED")</p>
                </div>
            </div>

            <!-- Alert -->
            <div class="bg-red-50 border border-red-200 rounded-xl p-4 flex items-start gap-3">
                <svg class="w-5 h-5 text-red-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                    <h3 class="text-sm font-medium text-red-800">Action Required</h3>
                    <p class="text-sm text-red-700 mt-1">@Model.Count problem boxes found. These require investigation to identify root causes (scanner issues, network problems, or physical box loss).</p>
                </div>
            </div>

            <!-- Data Table -->
            <div class="bg-white rounded-xl shadow-card border border-neutral-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-neutral-200 bg-neutral-50/50">
                    <h2 class="text-lg font-semibold text-neutral-900">Problem Boxes Detail</h2>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-neutral-200" id="dataTable">
                        <thead class="bg-neutral-50">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Barcode</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Line</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Status</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">FROM Plant</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">FROM Scan</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">TO Plant</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">TO Scan</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Created</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-neutral-200">
                            @foreach (var box in Model.Take(200))
                            {
                                <tr class="hover:bg-brand-50/50 transition-colors duration-150">
                                    <td class="px-4 py-3 text-sm font-medium text-neutral-900">@box.Barcode</td>
                                    <td class="px-4 py-3 text-sm text-neutral-700">@(box.LineCode ?? "—")</td>
                                    <td class="px-4 py-3 text-sm">
                                        @{
                                            var badgeVariant = box.MatchStatus switch
                                            {
                                                "MISSING_AT_TO" => "warning",
                                                "MISSING_AT_FROM" => "danger",
                                                "BOTH_FAILED" => "danger",
                                                _ => "neutral"
                                            };
                                        }
                                        @await Html.PartialAsync("_Badge", new { 
                                            Variant = badgeVariant, 
                                            Text = box.MatchStatus,
                                            Size = "sm"
                                        })
                                    </td>
                                    <td class="px-4 py-3 text-sm text-neutral-700">@(box.FromPlant ?? "—")</td>
                                    <td class="px-4 py-3 text-sm">
                                        <span class="text-neutral-600">@box.FromStatus</span>
                                        @if (!string.IsNullOrEmpty(box.FromScanTime))
                                        {
                                            <span class="text-neutral-400 text-xs block">@box.FromScanTime</span>
                                        }
                                    </td>
                                    <td class="px-4 py-3 text-sm text-neutral-700">@(box.ToPlant ?? "—")</td>
                                    <td class="px-4 py-3 text-sm">
                                        <span class="text-neutral-600">@box.ToStatus</span>
                                        @if (!string.IsNullOrEmpty(box.ToScanTime))
                                        {
                                            <span class="text-neutral-400 text-xs block">@box.ToScanTime</span>
                                        }
                                    </td>
                                    <td class="px-4 py-3 text-sm text-neutral-700">@box.CreatedAt.ToString("MM-dd HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.Count > 200)
                {
                    <div class="px-6 py-3 border-t border-neutral-200 bg-neutral-50/50 text-center">
                        <p class="text-sm text-neutral-500">Showing top 200 of @Model.Count records. Export to see all.</p>
                    </div>
                }
            </div>

            <!-- Investigation Guide -->
            <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-6">
                <h3 class="text-lg font-semibold text-neutral-900 mb-4">Investigation Guide</h3>
                <div class="grid gap-4 sm:grid-cols-3">
                    <div class="p-4 bg-orange-50 rounded-lg border border-orange-100">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-orange-100 text-orange-800">MISSING_AT_TO</span>
                        </div>
                        <p class="text-sm text-neutral-700">Box scanned at FROM but not at TO. Check:</p>
                        <ul class="text-xs text-neutral-600 mt-2 space-y-1 list-disc list-inside">
                            <li>TO scanner connectivity</li>
                            <li>Network issues at TO plant</li>
                            <li>Physical box loss in transit</li>
                        </ul>
                    </div>
                    <div class="p-4 bg-red-50 rounded-lg border border-red-100">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">MISSING_AT_FROM</span>
                        </div>
                        <p class="text-sm text-neutral-700">Box scanned at TO but not at FROM. Check:</p>
                        <ul class="text-xs text-neutral-600 mt-2 space-y-1 list-disc list-inside">
                            <li>FROM scanner connectivity</li>
                            <li>Sync service status</li>
                            <li>FROM plant database</li>
                        </ul>
                    </div>
                    <div class="p-4 bg-red-50 rounded-lg border border-red-100">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">BOTH_FAILED</span>
                        </div>
                        <p class="text-sm text-neutral-700">NO READ at both plants. Check:</p>
                        <ul class="text-xs text-neutral-600 mt-2 space-y-1 list-disc list-inside">
                            <li>Scanner alignment</li>
                            <li>Barcode print quality</li>
                            <li>Scanner hardware issues</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
        else
        {
            @await Html.PartialAsync("_EmptyState", new {
                Icon = "check",
                Title = "No problem boxes!",
                Message = "Great news! No problem boxes found in the last 7 days. All boxes have been successfully matched."
            })
        }
    </div>
</div>

@section Scripts {
    <script>
        function exportToCSV() {
            const table = document.getElementById('dataTable');
            if (!table) return;
            
            if (window.LoadingManager) {
                window.LoadingManager.show('Exporting...', 'Preparing CSV file for download');
            }
            
            let csv = [];
            const rows = table.querySelectorAll('tr');
            
            for (let i = 0; i < rows.length; i++) {
                let row = [], cols = rows[i].querySelectorAll('td, th');
                for (let j = 0; j < cols.length; j++) 
                    row.push(cols[j].innerText.replace(/\n/g, ' '));
                csv.push(row.join(','));
            }
            
            const csvContent = 'data:text/csv;charset=utf-8,' + csv.join('\n');
            const encodedUri = encodeURI(csvContent);
            const link = document.createElement('a');
            link.setAttribute('href', encodedUri);
            link.setAttribute('download', 'problem_boxes_report.csv');
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            
            setTimeout(function() {
                if (window.LoadingManager) {
                    window.LoadingManager.hide();
                }
            }, 1000);
        }
    </script>
}
