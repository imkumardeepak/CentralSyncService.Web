@model List<Web.Core.DTOs.PendingBoxRecord>
@{
    ViewData["Title"] = "Pending Boxes";
    var maxAge = ViewBag.MaxAgeMinutes ?? 60;
}

<div class="bg-neutral-100 min-h-full">
    <!-- Page Header -->
    <div class="border-b border-neutral-200 bg-white/80 backdrop-blur-sm sticky top-16 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div class="min-w-0 flex-1">
                    <a href="@Url.Action("Dashboard")" 
                       class="group inline-flex items-center text-sm text-neutral-500 hover:text-brand-600 mb-2 transition-colors duration-200">
                        <svg class="mr-1.5 h-4 w-4 transition-transform duration-200 group-hover:-translate-x-0.5" 
                             fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                        </svg>
                        Back to Dashboard
                    </a>
                    <div class="flex items-center gap-3">
                        <h1 class="text-2xl font-bold text-neutral-900 tracking-tight">Pending Boxes</h1>
                        @if (Model != null && Model.Any())
                        {
                            @await Html.PartialAsync("_Badge", new { 
                                Variant = "warning", 
                                Text = $"{Model.Count} pending",
                                ShowDot = true,
                                Pulse = true
                            })
                        }
                    </div>
                    <p class="mt-1 text-sm text-neutral-500">Boxes waiting for matching (last @maxAge minutes)</p>
                </div>
                
                <div class="flex items-center gap-3 flex-shrink-0">
                    <button type="button" onclick="refreshPage()" 
                            class="inline-flex items-center px-3 py-2 text-sm font-medium text-neutral-600 bg-white border border-neutral-300 rounded-lg hover:bg-neutral-50 hover:border-neutral-400 transition-all duration-200">
                        <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                        </svg>
                        Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 space-y-6">
        <!-- Filter & Stats -->
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
            <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
                <p class="text-xs font-medium text-neutral-500 uppercase tracking-wide">Pending Boxes</p>
                <p class="mt-2 text-2xl font-bold text-amber-600">@(Model?.Count ?? 0)</p>
            </div>
            <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
                <p class="text-xs font-medium text-neutral-500 uppercase tracking-wide">Pending TO</p>
                <p class="mt-2 text-2xl font-bold text-orange-600">@(Model?.Count(m => m.MatchStatus == "PENDING_TO") ?? 0)</p>
            </div>
            <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
                <p class="text-xs font-medium text-neutral-500 uppercase tracking-wide">Pending FROM</p>
                <p class="mt-2 text-2xl font-bold text-purple-600">@(Model?.Count(m => m.MatchStatus == "PENDING_FROM") ?? 0)</p>
            </div>
            <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
                <p class="text-xs font-medium text-neutral-500 uppercase tracking-wide">Max Age</p>
                <p class="mt-2 text-2xl font-bold text-neutral-900">@maxAge min</p>
            </div>
        </div>

        <!-- Filter Options -->
        <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
            <form method="get" class="flex flex-col sm:flex-row gap-4 items-end">
                <div class="flex-1 w-full sm:max-w-xs">
                    <label class="block text-sm font-medium text-neutral-700 mb-1">Max Age (minutes)</label>
                    <select name="maxAgeMinutes" class="w-full px-3 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 text-sm">
                        <option value="30" selected='@(maxAge == 30 ? "selected" : null)'>Last 30 minutes</option>
                        <option value="60" selected='@(maxAge == 60 ? "selected" : null)'>Last 1 hour</option>
                        <option value="120" selected='@(maxAge == 120 ? "selected" : null)'>Last 2 hours</option>
                        <option value="240" selected='@(maxAge == 240 ? "selected" : null)'>Last 4 hours</option>
                    </select>
                </div>
                <div class="flex gap-2">
                    <button type="submit" 
                            class="px-4 py-2 bg-brand-600 text-white text-sm font-medium rounded-lg hover:bg-brand-700 transition-colors">
                        Apply
                    </button>
                    <a href="@Url.Action("PendingBoxes")" 
                       class="px-4 py-2 bg-neutral-100 text-neutral-700 text-sm font-medium rounded-lg hover:bg-neutral-200 transition-colors">
                        Default (60 min)
                    </a>
                </div>
            </form>
        </div>

        @if (Model != null && Model.Any())
        {
            <!-- Alert -->
            <div class="bg-amber-50 border border-amber-200 rounded-xl p-4 flex items-start gap-3">
                <svg class="w-5 h-5 text-amber-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <div>
                    <h3 class="text-sm font-medium text-amber-800">Attention Required</h3>
                    <p class="text-sm text-amber-700 mt-1">@Model.Count boxes are pending match. These need to be investigated if they remain pending for an extended period.</p>
                </div>
            </div>

            <!-- Data Table -->
            <div class="bg-white rounded-xl shadow-card border border-neutral-200 overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-neutral-200">
                        <thead class="bg-neutral-50">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Barcode</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Line</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Status</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">FROM Plant</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">FROM Status</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">TO Plant</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">TO Status</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Age</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-neutral-200">
                            @foreach (var box in Model)
                            {
                                var isOld = box.AgeMinutes > 60;
                                <tr class="hover:bg-brand-50/50 transition-colors duration-150 @(isOld ? "bg-red-50/30" : "")">
                                    <td class="px-4 py-3 text-sm font-medium text-neutral-900">@box.Barcode</td>
                                    <td class="px-4 py-3 text-sm text-neutral-700">@(box.LineCode ?? "—")</td>
                                    <td class="px-4 py-3 text-sm">
                                        @await Html.PartialAsync("_Badge", new { 
                                            Variant = box.MatchStatus == "PENDING_TO" ? "warning" : "info", 
                                            Text = box.MatchStatus,
                                            Size = "sm"
                                        })
                                    </td>
                                    <td class="px-4 py-3 text-sm text-neutral-700">@(box.FromPlant ?? "—")</td>
                                    <td class="px-4 py-3 text-sm text-neutral-600">@box.FromStatus</td>
                                    <td class="px-4 py-3 text-sm text-neutral-700">@(box.ToPlant ?? "—")</td>
                                    <td class="px-4 py-3 text-sm text-neutral-600">@box.ToStatus</td>
                                    <td class="px-4 py-3 text-sm">
                                        <span class="font-medium @(isOld ? "text-red-600" : "text-neutral-900")">
                                            @box.AgeMinutes min
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            @await Html.PartialAsync("_EmptyState", new {
                Icon = "check",
                Title = "All boxes matched!",
                Message = $"No pending boxes found in the last @maxAge minutes. All boxes have been successfully matched or the transit time is normal."
            })
        }
    </div>
</div>

@section Scripts {
    <script>
        function refreshPage() {
            if (window.LoadingManager) {
                window.LoadingManager.show('Refreshing...', 'Fetching latest pending boxes data');
            }
            window.location.reload();
        }
        
        // Show loading on form submission
        document.querySelector('form').addEventListener('submit', function() {
            if (window.LoadingManager) {
                window.LoadingManager.show('Loading...', 'Applying filter');
            }
        });
        
        // Auto-refresh every 30 seconds
        setInterval(function() {
            if (window.LoadingManager) {
                window.LoadingManager.showPageLoader();
            }
            window.location.reload();
        }, 30000);
    </script>
}
