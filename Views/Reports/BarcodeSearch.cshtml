@model List<Web.Core.DTOs.BarcodeHistoryRecord>
@{
    ViewData["Title"] = "Barcode Search";
    var query = ViewBag.Query as string ?? string.Empty;
    var daysBack = ViewBag.DaysBack ?? 30;
}

<div class="bg-neutral-100 min-h-full">
    <!-- Page Header -->
    <div class="border-b border-neutral-200 bg-white/80 backdrop-blur-sm sticky top-16 z-40">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div class="min-w-0 flex-1">
                    <a href="@Url.Action("Dashboard")" 
                       class="group inline-flex items-center text-sm text-neutral-500 hover:text-brand-600 mb-2 transition-colors duration-200">
                        <svg class="mr-1.5 h-4 w-4 transition-transform duration-200 group-hover:-translate-x-0.5" 
                             fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                        </svg>
                        Back to Dashboard
                    </a>
                    <h1 class="text-2xl font-bold text-neutral-900 tracking-tight">Barcode Search</h1>
                    <p class="mt-1 text-sm text-neutral-500">Track box history across all plants</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 space-y-6">
        <!-- Search Form -->
        <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-6">
            <form method="post" asp-action="BarcodeSearch" class="space-y-4">
                <div class="grid gap-4 md:grid-cols-3">
                    <div class="md:col-span-2">
                        <label for="barcode" class="block text-sm font-medium text-neutral-700 mb-1">Barcode</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                                </svg>
                            </div>
                            <input type="text" id="barcode" name="barcode" value="@query" 
                                   placeholder="Enter barcode number..." 
                                   class="w-full pl-10 pr-4 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 text-sm"
                                   autofocus/>
                        </div>
                    </div>
                    <div>
                        <label for="daysBack" class="block text-sm font-medium text-neutral-700 mb-1">Search Period</label>
                        <select id="daysBack" name="daysBack" class="w-full px-3 py-2 border border-neutral-300 rounded-lg focus:ring-2 focus:ring-brand-500 focus:border-brand-500 text-sm">
                            <option value="7" selected='@(daysBack == 7 ? "selected" : null)'>Last 7 days</option>
                            <option value="14" selected='@(daysBack == 14 ? "selected" : null)'>Last 14 days</option>
                            <option value="30" selected='@(daysBack == 30 ? "selected" : null)'>Last 30 days</option>
                            <option value="60" selected='@(daysBack == 60 ? "selected" : null)'>Last 60 days</option>
                            <option value="90" selected='@(daysBack == 90 ? "selected" : null)'>Last 90 days</option>
                        </select>
                    </div>
                </div>
                <div class="flex gap-3">
                    <button type="submit" 
                            class="inline-flex items-center px-6 py-2 bg-brand-600 text-white text-sm font-medium rounded-lg hover:bg-brand-700 focus:outline-none focus:ring-2 focus:ring-brand-500 transition-colors">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                        </svg>
                        Search
                    </button>
                    @if (!string.IsNullOrEmpty(query))
                    {
                        <a href="@Url.Action("BarcodeSearch")" 
                           class="inline-flex items-center px-4 py-2 bg-neutral-100 text-neutral-700 text-sm font-medium rounded-lg hover:bg-neutral-200 transition-colors">
                            Clear
                        </a>
                    }
                </div>
            </form>
        </div>

        @if (!string.IsNullOrEmpty(query))
        {
            @if (Model != null && Model.Any())
            {
                <!-- Search Results Summary -->
                <div class="bg-emerald-50 border border-emerald-200 rounded-xl p-4 flex items-center gap-3">
                    <svg class="w-5 h-5 text-emerald-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <div>
                        <h3 class="text-sm font-medium text-emerald-800">Found @Model.Count result@(Model.Count != 1 ? "s" : "")</h3>
                        <p class="text-sm text-emerald-700">Search results for "@query" in the last @daysBack days</p>
                    </div>
                </div>

                <!-- Results Table -->
                <div class="bg-white rounded-xl shadow-card border border-neutral-200 overflow-hidden">
                    <div class="overflow-x-auto">
                        <table class="min-w-full divide-y divide-neutral-200">
                            <thead class="bg-neutral-50">
                                <tr>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Barcode</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Line</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Status</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">FROM</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">FROM Time</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">TO</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">TO Time</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Transit</th>
                                    <th class="px-4 py-3 text-left text-xs font-semibold text-neutral-600 uppercase tracking-wide">Created</th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-neutral-200">
                                @foreach (var record in Model)
                                {
                                    <tr class="hover:bg-brand-50/50 transition-colors duration-150">
                                        <td class="px-4 py-3 text-sm font-medium text-neutral-900">@record.Barcode</td>
                                        <td class="px-4 py-3 text-sm text-neutral-700">@(record.LineCode ?? "—")</td>
                                        <td class="px-4 py-3 text-sm">
                                            @await Html.PartialAsync("_Badge", new { 
                                                Variant = record.MatchStatus == "MATCHED" ? "success" : "warning", 
                                                Text = record.MatchStatus,
                                                Size = "sm"
                                            })
                                        </td>
                                        <td class="px-4 py-3 text-sm">
                                            <span class="text-neutral-700">@(record.FromPlant ?? "—")</span>
                                            <span class="text-neutral-400 text-xs block">[@record.FromStatus]</span>
                                        </td>
                                        <td class="px-4 py-3 text-sm text-neutral-600">@(record.FromScanTime ?? "—")</td>
                                        <td class="px-4 py-3 text-sm">
                                            <span class="text-neutral-700">@(record.ToPlant ?? "—")</span>
                                            <span class="text-neutral-400 text-xs block">[@record.ToStatus]</span>
                                        </td>
                                        <td class="px-4 py-3 text-sm text-neutral-600">@(record.ToScanTime ?? "—")</td>
                                        <td class="px-4 py-3 text-sm text-neutral-700">
                                            @if (record.TransitTimeSeconds.HasValue)
                                            {
                                                var mins = record.TransitTimeSeconds.Value / 60;
                                                var secs = record.TransitTimeSeconds.Value % 60;
                                                <span class="font-medium">@mins min @secs sec</span>
                                            }
                                            else
                                            {
                                                <span class="text-neutral-400">—</span>
                                            }
                                        </td>
                                        <td class="px-4 py-3 text-sm text-neutral-600">@record.CreatedAt.ToString("MM-dd HH:mm")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-5">
                    <h3 class="text-sm font-semibold text-neutral-900 mb-3">Need more information?</h3>
                    <div class="flex flex-wrap gap-3">
                        <a href="@Url.Action("ProblemBoxes")" 
                           class="inline-flex items-center px-4 py-2 bg-red-50 text-red-700 text-sm font-medium rounded-lg hover:bg-red-100 transition-colors">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                            </svg>
                            View Problem Boxes
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="bg-amber-50 border border-amber-200 rounded-xl p-6 text-center">
                    <svg class="mx-auto h-12 w-12 text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <h3 class="mt-4 text-sm font-medium text-amber-900">No results found</h3>
                    <p class="mt-2 text-sm text-amber-700">No records found for "@query" in the last @daysBack days.</p>
                    <p class="mt-1 text-xs text-amber-600">Try searching with a different barcode or extend the search period.</p>
                </div>
            }
        }
        else
        {
            <!-- Initial State -->
            <div class="bg-white rounded-xl shadow-card border border-neutral-200 p-12 text-center">
                <svg class="mx-auto h-16 w-16 text-neutral-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
                <h3 class="mt-4 text-lg font-medium text-neutral-900">Search for a barcode</h3>
                <p class="mt-2 text-sm text-neutral-500 max-w-md mx-auto">
                    Enter a barcode number above to track its journey through the system. 
                    You can search for partial matches and adjust the time period.
                </p>
                <div class="mt-6 flex justify-center gap-3">
                    <div class="text-left text-xs text-neutral-500 bg-neutral-50 px-4 py-3 rounded-lg">
                        <p class="font-medium mb-1">Search Tips:</p>
                        <ul class="space-y-1 list-disc list-inside">
                            <li>Use partial matches (e.g., "HLEE24")</li>
                            <li>Case insensitive search</li>
                            <li>Search up to 90 days back</li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Auto-focus on search input
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('barcode');
            if (searchInput && !searchInput.value) {
                searchInput.focus();
            }
        });
        
        // Show loading on form submission
        document.querySelector('form').addEventListener('submit', function() {
            const barcode = document.getElementById('barcode').value;
            if (barcode && window.LoadingManager) {
                window.LoadingManager.show('Searching...', 'Looking for barcode: ' + barcode);
            }
        });
    </script>
}
