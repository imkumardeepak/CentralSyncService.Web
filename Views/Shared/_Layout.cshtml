<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Haldiram Carton Scanning System - Box Tracking and Reporting System" />
    <title>@ViewData["Title"] - Haldiram Carton Scanning System</title>
    
    <!-- Tailwind CSS via CDN with Extended Configuration -->
    <script src="~/js/tailwind.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        // Brand Colors (Blue scale)
                        'brand': {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            200: '#bfdbfe',
                            300: '#93c5fd',
                            400: '#60a5fa',
                            500: '#3b82f6',
                            600: '#2563eb',
                            700: '#1d4ed8',
                            800: '#1e40af',
                            900: '#1e3a8a',
                        },
                        // Neutral scale for text and backgrounds
                        'neutral': {
                            50: '#fafafa',
                            100: '#f4f4f5',
                            200: '#e4e4e7',
                            300: '#d4d4d8',
                            400: '#a1a1aa',
                            500: '#71717a',
                            600: '#52525b',
                            700: '#3f3f46',
                            800: '#27272a',
                            900: '#18181b',
                        },
                        // Legacy support
                        'brand-primary': '#2563eb',
                        'brand-secondary': '#1e40af',
                        'brand-accent': '#3b82f6',
                    },
                    fontFamily: {
                        sans: ['Inter', 'ui-sans-serif', 'system-ui', '-apple-system', 'sans-serif'],
                    },
                    boxShadow: {
                        'card': '0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1)',
                        'card-hover': '0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1)',
                        'dropdown': '0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1)',
                    },
                    animation: {
                        'fade-in': 'fadeIn 0.2s ease-out',
                        'slide-down': 'slideDown 0.2s ease-out',
                        'slide-up': 'slideUp 0.2s ease-out',
                        'pulse-slow': 'pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' },
                        },
                        slideDown: {
                            '0%': { opacity: '0', transform: 'translateY(-10px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' },
                        },
                        slideUp: {
                            '0%': { opacity: '0', transform: 'translateY(10px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' },
                        },
                    },
                }
            }
        }
    </script>
    
    <!-- Google Fonts - Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <style>
        /* Navigation active state */
        .nav-link-active {
            background-color: #dbeafe;
            color: #1e40af;
            font-weight: 600;
        }
        .nav-link:hover {
            background-color: #eff6ff;
        }
        
        /* Smooth transitions for interactive elements */
        .nav-link, button, a {
            transition: all 0.15s ease-out;
        }
        
        /* Focus visible for accessibility */
        *:focus-visible {
            outline: 2px solid #3b82f6;
            outline-offset: 2px;
        }
        
        /* Dropdown animation */
        .dropdown-menu-animated {
            transform-origin: top;
            transition: opacity 0.15s ease-out, transform 0.15s ease-out;
        }
    </style>
</head>
<body class="bg-neutral-50 min-h-screen flex flex-col font-sans antialiased">
    <!-- Skip to main content - Accessibility -->
    <a href="#main-content" 
       class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] 
              focus:px-4 focus:py-2 focus:bg-brand-600 focus:text-white focus:rounded-lg focus:shadow-lg">
        Skip to main content
    </a>
    
    <!-- Header -->
    <header class="bg-white/95 backdrop-blur-sm border-b border-neutral-200 sticky top-0 z-50 shadow-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <!-- Logo & Title -->
                <div class="flex items-center">
                    <a href="@Url.Action("Index", "Home")" class="flex items-center">
                        <div class="flex-shrink-0">
                            <img src="~/Images/newlogo.png" alt="Haldiram Logo" class="h-10 w-auto" />
                        </div>
                        <div class="ml-3">
                            <h1 class="text-xl font-bold text-gray-900">Haldiram Carton Scanning System</h1>
                            <p class="text-xs text-gray-500">Box Tracking & Reporting</p>
                        </div>
                    </a>
                </div>

                <!-- Desktop Navigation -->
                <nav class="hidden lg:flex items-center space-x-1">
                    <a href="@Url.Action("Index", "Home")" class="nav-link px-3 py-2 rounded-md text-sm font-medium text-gray-700 transition-colors">
                        <svg class="inline-block w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                        </svg>
                        Dashboard
                    </a>
                    <a href="@Url.Action("Index", "PlantConfiguration")" class="nav-link px-3 py-2 rounded-md text-sm font-medium text-gray-700 transition-colors">
                        <svg class="inline-block w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        Plants
                    </a>
                    <div class="relative group">
                        <button class="nav-link px-3 py-2 rounded-md text-sm font-medium text-gray-700 transition-colors flex items-center">
                            <svg class="inline-block w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            Reports
                            <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </button>
                        <div class="absolute left-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                            <div class="py-1">
                                <a href="@Url.Action("DailySummary", "Reports")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">üìÖ Daily Summary</a>
                                <a href="@Url.Action("PendingBoxes", "Reports")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">‚è≥ Pending Boxes</a>
                                <a href="@Url.Action("ProblemBoxes", "Reports")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">‚ö†Ô∏è Problem Boxes</a>
                                <a href="@Url.Action("NoReadAnalysis", "Reports")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">üîç NO READ Analysis</a>
                                <a href="@Url.Action("BarcodeSearch", "Reports")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">üîé Barcode Search</a>
                                <div class="border-t my-1"></div>
                                <a href="@Url.Action("ProductionOrderBatchReport", "Reports")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 font-semibold">üì¶ Production Order Batch</a>
                            </div>
                        </div>
                    </div>
                    <a href="@Url.Action("SyncStatus", "Home")" class="nav-link px-3 py-2 rounded-md text-sm font-medium text-gray-700 transition-colors">
                        <svg class="inline-block w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Sync Status
                    </a>
                </nav>

                <!-- Sync Status Indicator -->
                <div class="hidden md:flex items-center space-x-4">
                    <div id="syncStatusIndicator" class="flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
                        <span class="w-2 h-2 rounded-full bg-gray-400 mr-2 animate-pulse"></span>
                        <span>Checking...</span>
                    </div>
                    <button id="menuButton" class="lg:hidden p-2 rounded-md text-gray-700 hover:bg-gray-100">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                        </svg>
                    </button>
                </div>

                <!-- Mobile menu button -->
                <button id="mobileMenuButton" class="lg:hidden p-2 rounded-md text-gray-700 hover:bg-gray-100">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobileMenu" class="lg:hidden hidden border-t border-gray-200">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <a href="@Url.Action("Index", "Home")" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">üìä Dashboard</a>
                <a href="@Url.Action("Index", "PlantConfiguration")" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">‚öôÔ∏è Plants</a>
                <div class="px-3 py-2 text-xs font-semibold text-gray-500 uppercase tracking-wide">Reports</div>
                <a href="@Url.Action("DailySummary", "Reports")" class="block pl-6 pr-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">üìÖ Daily Summary</a>
                <a href="@Url.Action("PendingBoxes", "Reports")" class="block pl-6 pr-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">‚è≥ Pending Boxes</a>
                <a href="@Url.Action("ProblemBoxes", "Reports")" class="block pl-6 pr-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">‚ö†Ô∏è Problem Boxes</a>
                <a href="@Url.Action("NoReadAnalysis", "Reports")" class="block pl-6 pr-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">üîç NO READ Analysis</a>
                <a href="@Url.Action("BarcodeSearch", "Reports")" class="block pl-6 pr-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">üîé Barcode Search</a>
                <div class="border-t my-1 ml-6"></div>
                <a href="@Url.Action("ProductionOrderBatchReport", "Reports")" class="block pl-6 pr-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100 font-semibold">üì¶ Production Order Batch</a>
                <a href="@Url.Action("SyncStatus", "Home")" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:bg-gray-100">üè† Sync Status</a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main id="main-content" class="flex-1 animate-fade-in" role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-neutral-200 mt-auto">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
            <div class="flex flex-col sm:flex-row items-center justify-center gap-1 text-sm text-neutral-600">
                <span>&copy; @DateTime.Now.Year - Haldiram Carton Scanning System</span>
                <span class="hidden sm:inline text-neutral-300">|</span>
                <span>Developed by <strong class="text-neutral-800">Aarkay Techno Consultants Pvt. Ltd.</strong></span>
            </div>
        </div>
    </footer>

    <!-- JavaScript for mobile menu and sync status -->
    <script>
        // Mobile menu toggle
        const mobileMenuButton = document.getElementById('mobileMenuButton');
        const mobileMenu = document.getElementById('mobileMenu');
        
        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }

        // Simulate sync status check (replace with actual API call)
        function updateSyncStatus() {
            const indicator = document.getElementById('syncStatusIndicator');
            if (indicator) {
                // This would normally be an API call to check sync service status
                const isRunning = true; // Replace with actual status check
                
                if (isRunning) {
                    indicator.innerHTML = `
                        <span class="w-2 h-2 rounded-full bg-green-500 mr-2"></span>
                        <span>Syncing</span>
                    `;
                    indicator.className = 'flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800';
                } else {
                    indicator.innerHTML = `
                        <span class="w-2 h-2 rounded-full bg-red-500 mr-2"></span>
                        <span>Stopped</span>
                    `;
                    indicator.className = 'flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800';
                }
            }
        }

        // Update sync status on page load
        updateSyncStatus();
        
        // Update sync status every 10 seconds
        setInterval(updateSyncStatus, 10000);

        // Highlight active navigation link
        const currentPath = window.location.pathname;
        document.querySelectorAll('.nav-link, #mobileMenu a').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('nav-link-active');
            }
        });
    </script>

    <!-- Loading Overlay -->
    @await Html.PartialAsync("_LoadingOverlay")
    
    <!-- Confirmation Modal Component -->
    @await Html.PartialAsync("_ConfirmModal")
    
    <!-- Global JavaScript -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
