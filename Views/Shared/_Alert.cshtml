@*
    Alert Component
    Usage: @await Html.PartialAsync("_Alert", new { 
        Variant = "success", // success, warning, danger, info
        Title = "Success!",
        Message = "Your changes have been saved.",
        Dismissible = true,
        Id = "alert-1"
    })
*@
@{
    // Safely extract properties from the model
    var modelType = ViewData.Model?.GetType();
    var variant = "info";
    var title = "";
    var message = "";
    var dismissible = false;
    var id = $"alert-{Guid.NewGuid().ToString("N").Substring(0, 8)}";
    
    if (ViewData.Model != null)
    {
        try
        {
            var v = modelType?.GetProperty("Variant")?.GetValue(ViewData.Model);
            if (v != null) variant = v.ToString();
            
            var t = modelType?.GetProperty("Title")?.GetValue(ViewData.Model);
            if (t != null) title = t.ToString();
            
            var m = modelType?.GetProperty("Message")?.GetValue(ViewData.Model);
            if (m != null) message = m.ToString();
            
            var d = modelType?.GetProperty("Dismissible")?.GetValue(ViewData.Model);
            if (d != null) dismissible = Convert.ToBoolean(d);
            
            var i = modelType?.GetProperty("Id")?.GetValue(ViewData.Model);
            if (i != null) id = i.ToString();
        }
        catch { }
    }
    
    // Container classes based on variant
    var containerClasses = variant switch {
        "success" => "bg-emerald-50 border-l-4 border-emerald-500",
        "warning" => "bg-amber-50 border-l-4 border-amber-500",
        "danger" => "bg-red-50 border-l-4 border-red-500",
        _ => "bg-blue-50 border-l-4 border-blue-500"
    };
    
    // Icon and text color classes
    var colorClasses = variant switch {
        "success" => "text-emerald-600",
        "warning" => "text-amber-600",
        "danger" => "text-red-600",
        _ => "text-blue-600"
    };
    
    var titleColorClasses = variant switch {
        "success" => "text-emerald-800",
        "warning" => "text-amber-800",
        "danger" => "text-red-800",
        _ => "text-blue-800"
    };
    
    var messageColorClasses = variant switch {
        "success" => "text-emerald-700",
        "warning" => "text-amber-700",
        "danger" => "text-red-700",
        _ => "text-blue-700"
    };
}

<div id="@id" class="rounded-lg @containerClasses p-4 animate-fade-in" role="alert">
    <div class="flex">
        <div class="flex-shrink-0">
            @switch (variant)
            {
                case "success":
                    <svg class="h-5 w-5 @colorClasses" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    break;
                case "warning":
                    <svg class="h-5 w-5 @colorClasses" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                    </svg>
                    break;
                case "danger":
                    <svg class="h-5 w-5 @colorClasses" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                    break;
                default:
                    <svg class="h-5 w-5 @colorClasses" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                    break;
            }
        </div>
        <div class="ml-3 flex-1">
            @if (!string.IsNullOrEmpty(title))
            {
                <h3 class="text-sm font-medium @titleColorClasses">@title</h3>
            }
            @if (!string.IsNullOrEmpty(message))
            {
                <p class="@(string.IsNullOrEmpty(title) ? "" : "mt-1") text-sm @messageColorClasses">@message</p>
            }
        </div>
        @if (dismissible)
        {
            <div class="ml-auto pl-3">
                <button type="button" 
                        onclick="document.getElementById('@id').remove()"
                        class="-mx-1.5 -my-1.5 p-1.5 inline-flex rounded-lg @colorClasses hover:bg-white/50 focus:outline-none focus:ring-2 focus:ring-offset-2 transition-colors">
                    <span class="sr-only">Dismiss</span>
                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                    </svg>
                </button>
            </div>
        }
    </div>
</div>
